<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <data>
        <record id="email_template_role_base_birthday_wish" model="mail.template">
            <field name="name">Role Base Birthday Wish</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Wishing you a great birthday</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="reply_to">no-reply@example.com</field>
            <field name="email_to">{{ object.email or '' }}</field>
            <field name="partner_to">{{ user.partner_id.id or '' }}</field>
            <field name="body_html" type="html">
                <p>Dear {{custom_name}},</p>
                <p>I value your special day just as much as I value you. On your birthday, I send you my warmest and most heartfelt wishes.</p>
                <p>Wishing you a very happy birthday!</p>
                <p>Best regards,<br/>
                <t t-out="user.name or ''"> Wood Corner</t></p>
            </field>
        </record>
    </data>
</odoo>

