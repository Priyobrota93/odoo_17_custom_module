<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <data>
        <record id="email_template_victory_day" model="mail.template">
            <field name="name">Victory Day Greeting</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">বিজয় দিবসের শুভেচ্ছা - Joy Bangla!</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="reply_to">no-reply@example.com</field>
            <field name="email_to">{{ object.email or '' }}</field>
            <field name="partner_to">{{ user.partner_id.id or '' }}</field>
            <field name="body_html" type="html">
                <p>Dear
