<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <data>
        <record id="email_template_new_year" model="mail.template">
            <field name="name">New Year Greeting</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">ðŸŽ‰ Happy New Year {{ datetime.now().year }} ðŸŽŠ</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="reply_to">no-reply@example.com</field>
            <field name="email_to">{{ object.email or '' }}</field>
            <field name="partner_to">{{ user.partner_id.id or '' }}</field>
            <field name="body_html" type="html">
                <p>Dear  <strong>
                        <t t-out="[
        part for part in (object.name or '').split(' ')
        if part.lower() not in ['mr.', 'mrs.', 'ms.', 'dr.', 'miss']
    ][0] if object.name else 'Friend'" />
                    </strong>,</p>
                <p>Wishing you a year filled with happiness, health, and success. Let's welcome {{ datetime.now().year }} with new hopes and goals.</p>
                <p>Happy New Year!</p>
                <p>Best wishes,<br/>
                <t t-out="user.name"/></p>
            </field>
        </record>
    </data>
</odoo>

