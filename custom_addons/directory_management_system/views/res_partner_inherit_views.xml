<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_relation" model="ir.ui.view">
        <field name="name">res.partner.form.relation.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='parent_id']" position="before">
                <field name="x_studio_gender" placeholder="Gender" invisible="company_type == 'company'"/>
            </xpath>

           <xpath expr="//field[@name='vat']" position="before">
                <field name="x_studio_relation" invisible="company_type == 'company'"/>
            </xpath>

          <xpath expr="//field[@name='x_studio_relation']" position="before">
                <field name="religion" invisible="company_type == 'company'"/>
            </xpath>

            <xpath expr="//field[@name='religion']" position="before">
                <field name="birth_date" invisible="company_type == 'company'"/>
            </xpath>
            <xpath expr="//field[@name='birth_date']" position="after">
                <field name="age" invisible="company_type == 'company'"/>
            </xpath>

        </field>
    </record>

    <record id="view_partner_form_hide_company_option" model="ir.ui.view">
        <field name="name">res.partner.form.remove_company_type_option</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="replace">
                <field name="company_type" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

