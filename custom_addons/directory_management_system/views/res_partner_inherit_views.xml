    <record id="view_partner_search_inherit" model="ir.ui.view">
    <field name="name">res.partner.search.inherit</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="arch" type="xml">
        <xpath expr="//search" position="inside">

            <filter string="Sir" name="relation" domain="[('x_studio_relation', 'ilike', 'Sir')]"/>
            <filter string="Friend" name="relation" domain="[('x_studio_relation', 'ilike', 'Friend')]"/>
            <filter string="Colleague" name="relation" domain="[('x_studio_relation', 'ilike', 'Colleague')]"/>
            <filter string="Madam" name="relation" domain="[('x_studio_relation', 'ilike', 'Madam')]"/>
            <separator/>
            <filter string="Islam" name="religion" domain="[('religion', 'ilike', 'Islam')]"/>
            <filter string="Hinduism" name="religion" domain="[('religion', 'ilike', 'Hinduism')]"/>
            <filter string="Buddhism" name="religion" domain="[('religion', 'ilike', 'Buddhism')]"/>
            <filter string="Christianity" name="religion" domain="[('religion', 'ilike', 'Christianity')]"/>


            <!-- Group by -->
            <separator/>
            <filter string="Religion" name="group_by_religion" context="{'group_by': 'religion'}"/>
            <filter string="Relation" name="group_by_relation" context="{'group_by': 'x_studio_relation'}"/>

        </xpath>
    </field>
</record>
