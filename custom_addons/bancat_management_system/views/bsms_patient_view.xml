<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </page>-->


                            <!-- Add this to your patient form view for documents page -->
<!--                            <page string="Documents">-->
<!--                                <field name="document_ids" nolabel="1">-->
<!--                                    <tree editable="bottom">-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="attachment_id" widget="many2one_binary" string="File" options="{'no_create': True}"/>-->
<!--                                        <field name="folder_id" invisible="0"/>-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </page>-->

