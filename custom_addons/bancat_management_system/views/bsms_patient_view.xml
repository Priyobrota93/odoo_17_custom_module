<!--                                <field name="document_ids" nolabel="1">-->
<!--                                    <tree editable="bottom" create="'Add a file'" delete="true">-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="attachment_id" widget="binary"/>-->
<!--&lt;!&ndash;                                        <field name="file_description"/>&ndash;&gt;-->
<!--                                    </tree>-->
