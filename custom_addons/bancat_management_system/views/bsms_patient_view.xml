<!--                                                    <field name="attachment_id" widget="binary"/>-->
<!--                                                </div>-->
<!--                                            </t>-->
<!--                                        </templates>-->
<!--                                    </kanban>-->
<!--                                </field>-->
<!--                            </page>-->


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="bsms_patient_kanban_view" model="ir.ui.view">
            <field name="name">bancat.patient.kanban</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="profile_image"/>
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="cancer_type"/>
                    <field name="cancer_stage"/>
                    <field name="emergency_contact"/>
                    <field name="state"/>

                    <templates>
                         <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                        <!-- Profile image covering the left side -->
                        <t t-if="record.profile_image.raw_value">
                            <div class="o_kanban_image_fill_left d-block" widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}">
                                <img t-att-src="kanban_image('bancat.patient', 'profile_image', record.id.raw_value)" class="oe_kanban_avatar oe_kanban_image" alt="Profile Image" style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="o_kanban_image_fill_left d-flex align-items-center justify-content-center bg-100 bg-gradient">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-75 h-75 opacity-50" viewBox="0 0 20 20">
                                    <g fill="currentColor">
                                        <path d="M 10 11 C 4.08 11 2 14 2 16 L 2 19 L 18 19 L 18 16 C 18 14 15.92 11 10 11 Z"/>
                                        <circle cx="10" cy="5.5" r="4.5"/>
                                    </g>
                                </svg>
                            </div>
                        </t>



                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div>
                                        <span>Patient Id: <field name="patient_id"/></span>
                                    </div>
                                    <div>
                                        <span>Gender: <field name="gender"/></span>
                                    </div>
                                    <div>
                                        <span>Age: <field name="age"/></span>
                                    </div>
                                    <div>
                                        <span>Cancer Type: <field name="cancer_type"/></span>
                                    </div>
                                    <div>
                                        <span>Cancer Stage: <field name="cancer_stage"/></span>
                                    </div>
                                    <div>
                                        <span>Contact: <field name="emergency_contact"/></span>
                                    </div>
                                    <div>
                                        <span>Status: <field name="state"/></span>
                                    </div>


                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

