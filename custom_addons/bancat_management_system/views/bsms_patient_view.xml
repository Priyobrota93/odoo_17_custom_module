<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_open_visit" model="ir.actions.act_window">
            <field name="name">Patient Visits</field>
            <field name="res_model">bancat.patient.visit</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bsms_patient_visit_tree_view"/>
            <field name="domain">[('patient_id', '=', active_id)]</field>
        </record>


        <record id="action_open_documents" model="ir.actions.act_window">
            <field name="name">Patient Documents</field>
            <field name="res_model">documents.document</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('patient_id', '=', active_id)]</field>
            <field name="context">{'default_patient_id': active_id}</field>
        </record>

        <!-- Tree View -->
        <record id="bsms_patient_tree_view" model="ir.ui.view">
            <field name="name">bancat.patient.tree</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient_id"/>
                    <field name="name" placeholder="Enter full name"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="age"/>
                    <field name="patient_address"/>
                    <field name="emergency_contact"/>
                    <field name="bed_allocation_id"/>
                    <field name="current_hospital"/>
                    <field name="hospital_address"/>
                     <field name="state"/>
<!--                    <field name="attendance_ids" widget="one2many_list">-->
<!--                        <field name="atten_name" string="Attendance Name"/>-->
<!--                        <field name="atten_address" string="Attendance Address"/>-->
<!--                        <field name="atten_contact_number" string="Attendance Contact"/>-->
<!--                        <field name="atten_relation_of_patient"/>-->
<!--                        <field name="atten2_name" string="Additional Attendance Name"/>-->
<!--                        <field name="atten2_address" string="Additional Attendance Address"/>-->
<!--                        <field name="atten2_contact_number" string="Additional Attendance Contact"/>-->
<!--                        <field name="atten2_relation_of_patient"/>-->
<!--                    </field>-->
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="bsms_patient_form_view" model="ir.ui.view">
            <field name="name">bancat.patient.form</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">

                <form>

                    <header>
                        <button name="action_check_in" type="object" string="Check In" class="btn btn-primary" invisible="state == 'check_in'"/>
                        <button name="action_check_out" type="object" string="Check Out" class="btn btn-danger" invisible="state == 'check_out'"/>
                        <field  name="state" widget="statusbar"/>
                        <!-- <field  name="state" widget="statusbar" statusbar_visible ="new,received"/>   {(if want to specific statusbar state show using statusbar_visible and specific state mention)}-->
                    </header>

                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_documents"
                                    icon="fa-file-text-o">
                                <div class="o_stat_info">
                                    <field name="document_count" class="o_stat_value"/>
                                    <span class="oe_stat_text">Documents</span>
                                </div>
                            </button>
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_visit"
                                    icon="fa-bullseye">
                                <div class="oe_stat_info">
                                    <span class="oe_stat_text">Visit</span>
                                </div>
                            </button>

                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_view_release_paper"
                                    icon="fa-print"
                                    string="Release Paper"
                                    invisible="state != 'check_out'">
                                <div class="o_stat_info">
                                    <span class="oe_stat_text">Release Paper</span>
                                </div>
                            </button>


                        </div>


                        <div class="oe_title d-flex justify-between align-items-center">
                            <h1 class="m-0">
                                <field name="name" placeholder="Enter Patient name" class="oe_inline"/>
                            </h1>
                            <div class="me-3">
                                <field name="profile_image" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="dob"/>
                                <field name="age" readonly="1"/>
                                <field name="cancer_type" readonly= "('state' == 'check_out')"/>
                                <field name="cancer_stage" readonly= "('state' == 'check_out')"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="bed_allocation_id" domain="[('is_available', '=', True)]" readonly= "('state' == 'check_out')"/>
                                <field name="patient_address"/>
                                <field name="emergency_contact"/>
                            </group>
                        </group>
                        <notebook>

                            <page string ="Current Situation" readonly= "('state' == 'check_out')">
                                 <sheet>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="current_hospital" readonly= "('state' == 'check_out')"/>
                                                <field name="hospital_address" readonly="1"/>
                                                <field name="approximate_amount" readonly= "('state' == 'check_out')"/>

                                            </group>
                                            <group>
                                                <field name="treatment_details" widget="text" readonly= "('state' == 'check_out')"/>
                                                <field name="current_status" readonly= "('state' == 'check_out')"/>
                                            </group>
                                        </group>
                                    </form>
                                 </sheet>
                            </page>

                             <page string="Current Situation (Checked Out)" invisible= "('state' != 'check_out')">
                                <div class="alert alert-info" role="alert">
                                    <p>This patient is currently checked out. Previous medical information is archived and will be restored upon check-in.</p>
                                    <p>Use the "Check In" button to admit this patient again.</p>
                                </div>
                                <group>
                                    <group>
                                        <field name="previous_cancer_type_id" readonly="1" string="Previous Cancer Type"/>
                                        <field name="previous_cancer_stage" readonly="1" string="Previous Cancer Stage"/>
                                        <field name="previous_current_hospital_id" readonly="1" string="Previous Hospital"/>
                                    </group>
                                    <group>
                                        <field name="previous_current_status" readonly="1" string="Previous Status"/>
                                        <field name="previous_bed_allocation_id" readonly="1" string="Previous Bed Allocation"/>
                                    </group>
                                </group>
                                <field name="previous_treatment_details" readonly="1" string="Previous Treatment Details"/>
                            </page>

                            <page string="Attendant Information" readonly= "('state' == 'check_out')">
<!--                                <div class="oe_button_box" name="button_box">-->
<!--                                    <button name="%(bancat_management_system.action_bancat_attendance)d"-->
<!--                                            string="Add Attendance"-->
<!--                                            type="action"-->
<!--                                            class="oe_highlight"/>-->
<!--                                </div>-->

                                <h1>Current Attendant Records</h1>
                                <field name="attendance_ids" nolabel="1" domain="[('is_latest', '=', True)]" context="{'default_patient_id': active_id}"                  >
                                    <tree >
                                        <field name="create_date" string="Recorded Date"/>
                                        <field name="atten_name"/>
                                        <field name="atten_age"/>
                                        <field name="atten_gender"/>
                                        <field name="atten_relation_of_patient"/>
                                        <field name="atten_contact_number"/>
                                        <field name="atten_profession"/>
                                        <field name="atten_education_level"/>
                                        <field name="atten_reference"/>
                                        <field name="atten_address"/>
                                        <field name="atten2_name" string="Additional Attendant"/>
                                        <field name="atten2_contact_number" string="Additional Contact"/>
                                        <field name="atten2_relation_of_patient" string="Additional Relation"/>
                                    </tree>
                                </field>


                            </page>

<!--                            <page string="Attendant History" invisible= "('state' != 'check_out')">-->
