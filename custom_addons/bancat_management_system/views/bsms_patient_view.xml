        <record id="bsms_patient_visit_tree_view" model="ir.ui.view">
            <field name="name">bancat.patient.visit.tree</field>
            <field name="model">bancat.patient.visit</field>
            <field name="arch" type="xml">
                <tree string="Patient Visits">
                    <field name="patient_id"/>
                    <field name="cancer_type"/>
                    <field name="cancer_stage"/>
                    <field name="current_hospital"/>
                    <field name="bed_allocation_id"/>
                    <field name="approximate_amount"/>
                    <field name="treatment_details"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" string="Stage"/>
                </tree>
            </field>
        </record>




        <!-- Action -->
        <record id="action_bsms_patient" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">bancat.patient</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="bsms_patient_kanban_view"/>
            <field name="help" type="html">
                <p class='o_view_nocontent_smiling_face'>
                    Create a patient contact
                </p>
            </field>
        </record>

