        <record id="action_open_visit" model="ir.actions.act_window">
            <field name="name">Patient Visits</field>
            <field name="res_model">bancat.patient.visit</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bsms_patient_visit_tree_view"/>
            <field name="domain">[('patient_id', '=', active_id)]</field>
        </record>


        <record id="action_open_documents" model="ir.actions.act_window">
            <field name="name">Patient Documents</field>
            <field name="res_model">documents.document</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('patient_id', '=', active_id)]</field>
            <field name="context">{'default_patient_id': active_id}</field>
        </record>

        <!-- Tree View -->
        <record id="bsms_patient_tree_view" model="ir.ui.view">
            <field name="name">bancat.patient.tree</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient_id"/>
                    <field name="name" placeholder="Enter full name"/>
                    <field name="gender"/>
                    <field name="dob"/>
                    <field name="age"/>
                    <field name="patient_address"/>
                    <field name="emergency_contact"/>
                    <field name="bed_allocation_id"/>
                    <field name="current_hospital"/>
                    <field name="hospital_address"/>
<!--                    <field name="attendance_ids" widget="one2many_list">-->
<!--                        <field name="atten_name" string="Attendance Name"/>-->
<!--                        <field name="atten_address" string="Attendance Address"/>-->
<!--                        <field name="atten_contact_number" string="Attendance Contact"/>-->
<!--                        <field name="atten_relation_of_patient"/>-->
<!--                        <field name="atten2_name" string="Additional Attendance Name"/>-->
<!--                        <field name="atten2_address" string="Additional Attendance Address"/>-->
<!--                        <field name="atten2_contact_number" string="Additional Attendance Contact"/>-->
<!--                        <field name="atten2_relation_of_patient"/>-->
<!--                    </field>-->
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="bsms_patient_form_view" model="ir.ui.view">
            <field name="name">bancat.patient.form</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">

                <form>

                    <header>
                        <button name="action_check_in" type="object" string="Check In" class="btn btn-primary"/>
                        <button name="action_check_out" type="object" string="Check Out" class="btn btn-danger"/>
                        <field  name="state" widget="statusbar"/>
                        <!-- <field  name="state" widget="statusbar" statusbar_visible ="new,received"/>   {(if want to specific statusbar state show using statusbar_visible and specific state mention)}-->
                    </header>

                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button"
                                    type="action"
                                    name="%(action_open_documents)d"
                                    icon="fa-file">
                                <div class="oe_stat_info">
                                    <span class="oe_stat_text">Documents</span>
                                    <div>
                                        <field name="document_count"/>
                                    </div>
                                </div>
                            </button>
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_visit"
                                    icon="fa-file">
                                <div class="oe_stat_info">
                                    <span class="oe_stat_text">Visit</span>
                                </div>
                            </button>


                        </div>


                        <div class="oe_title d-flex justify-between align-items-center">
                            <h1 class="m-0">
                                <field name="name" placeholder="Enter Patient name" class="oe_inline"/>
                            </h1>
                            <div class="me-3">
                                <field name="profile_image" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>
                            </div>
                        </div>
                        <group>
                            <group>
<!--                                <field name="patient_id"/>-->
                                <field name="dob"/>
                                <field name="age" readonly="1"/>
                                <field name="cancer_type"/>
                                <field name="cancer_stage" />
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="bed_allocation_id"/>
                                <field name="patient_address"/>
                                <field name="emergency_contact"/>
                            </group>
                        </group>
                        <notebook>

                            <page string ="Current Situation">
                                 <sheet>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="current_hospital"/>
                                                <field name="hospital_address" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="treatment_details" widget="text"/>
                                                <field name="current_status"/>
                                            </group>
                                        </group>
                                    </form>
                                 </sheet>
                            </page>
<!--                            <page string="Attendance Information">-->
<!--                                <button name="%(bancat_management_system.action_bancat_attendance)d" string="Add" type="action" class="oe_highlight"/>-->
<!--                            </page>-->
                            <page string="Attendance Information">
<!--                                <div class="oe_button_box" name="button_box">-->
<!--                                    <button name="%(bancat_management_system.action_bancat_attendance)d"-->
<!--                                            string="Add Attendance"-->
<!--                                            type="action"-->
<!--                                            class="oe_highlight"/>-->
<!--                                </div>-->

                                <h1>Current Attendance Records</h1>
                                <field name="attendance_ids" nolabel="1" context="{'default_patient_id': active_id}">
                                    <tree decoration-info="atten2_name" create="'Add an attendance'">
                                        <field name="create_date" string="Recorded Date"/>
                                        <field name="atten_name"/>
                                        <field name="atten_age"/>
                                        <field name="atten_gender"/>
                                        <field name="atten_relation_of_patient"/>
                                        <field name="atten_contact_number"/>
                                        <field name="atten_profession"/>
                                        <field name="atten_education_level"/>
                                        <field name="atten_reference"/>
                                        <field name="atten_address"/>
                                        <field name="atten2_name" string="Additional Attendant"/>
                                        <field name="atten2_contact_number" string="Additional Contact"/>
                                        <field name="atten2_relation_of_patient" string="Additional Relation"/>
                                    </tree>
                                </field>


                            </page>
                            <page string="Documents">
                                <field name="document_ids" nolabel="1">
                                    <tree editable="bottom" create="'Add a file'" delete="true">
                                        <field name="name"/>
                                        <field name="attachment_id" widget="binary"/>
<!--                                        <field name="file_description"/>-->
                                    </tree>
                                    <kanban>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click">
                                                    <strong><field name="name"/></strong>
                                                    <field name="attachment_id" widget="binary"/>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="bsms_patient_kanban_view" model="ir.ui.view">
            <field name="name">bancat.patient.kanban</field>
            <field name="model">bancat.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="profile_image"/>
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="cancer_type"/>
                    <field name="cancer_stage"/>
                    <field name="emergency_contact"/>

                    <templates>
                         <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                        <!-- Profile image covering the left side -->
                        <t t-if="record.profile_image.raw_value">
                            <div class="o_kanban_image_fill_left d-block" widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}">
                                <img t-att-src="kanban_image('bancat.patient', 'profile_image', record.id.raw_value)" class="oe_kanban_avatar oe_kanban_image" alt="Profile Image" style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="o_kanban_image_fill_left d-flex align-items-center justify-content-center bg-100 bg-gradient">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-75 h-75 opacity-50" viewBox="0 0 20 20">
                                    <g fill="currentColor">
                                        <path d="M 10 11 C 4.08 11 2 14 2 16 L 2 19 L 18 19 L 18 16 C 18 14 15.92 11 10 11 Z"/>
                                        <circle cx="10" cy="5.5" r="4.5"/>
                                    </g>
                                </svg>
                            </div>
                        </t>



                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div>
                                        <span>Patient Id: <field name="patient_id"/></span>
                                    </div>
                                    <div>
                                        <span>Gender: <field name="gender"/></span>
                                    </div>
                                    <div>
                                        <span>Age: <field name="age"/></span>
                                    </div>
                                    <div>
                                        <span>Cancer Type: <field name="cancer_type"/></span>
                                    </div>
                                    <div>
                                        <span>Cancer Stage: <field name="cancer_stage"/></span>
                                    </div>
                                    <div>
                                        <span>Contact: <field name="emergency_contact"/></span>
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="bsms_patient_visit_tree_view" model="ir.ui.view">
            <field name="name">bancat.patient.visit.tree</field>
            <field name="model">bancat.patient.visit</field>
            <field name="arch" type="xml">
                <tree string="Patient Visits">
                    <field name="patient_id"/>
                    <field name="cancer_type"/>
                    <field name="cancer_stage"/>
                    <field name="current_hospital"/>
                    <field name="treatment_details"/>
                    <field name="approximate_amount"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" string="Stage"/>
                </tree>
            </field>
        </record>




        <!-- Action -->
        <record id="action_bsms_patient" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">bancat.patient</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="view_id" ref="bsms_patient_kanban_view"/>
            <field name="help" type="html">
                <p class='o_view_nocontent_smiling_face'>
                    Create a patient contact
                </p>
            </field>
        </record>

    </data>
</odoo>


